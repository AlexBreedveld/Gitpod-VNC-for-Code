{
    "name": "shortcut-menu-bar",
    "displayName": "Shortcut Menu Bar",
    "description": "Shortcut Menu Bar - It adds useful buttons like format,save etc to the editor menu bar in Visual Studio Code.",
    "version": "0.0.4",
    "publisher": "jerrygoyal",
    "author": {
        "name": "Jerrygoyal"
    },
    "engines": {
        "vscode": "^1.22.0"
    },
    "icon": "images/menubar.png",
    "bugs": {
        "url": "https://github.com/JerryGoyal/Shortcut-Menu-Bar-VSCode-Extension/issues",
        "email": "1gouravgg@gmail.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/JerryGoyal/Shortcut-Menu-Bar-VSCode-Extension.git"
    },
    "homepage": "https://github.com/JerryGoyal/Shortcut-Menu-Bar-VSCode-Extension",
    "categories": [
        "Programming Languages",
        "Other"
    ],
    "keywords": [
        "shortcut",
        "menu",
        "bar",
        "menubar",
        "shortcut menu bar"
    ],
    "activationEvents": [
        "onCommand:extension.save",
        "onCommand:extension.beautify",
        "onCommand:extension.filelist"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.save",
                "title": "Save",
                "category": "menubar",
                "icon": {
                    "light": "images/save_light.svg",
                    "dark": "images/save.svg"
                }
            },
            {
                "command": "extension.beautify",
                "title": "Beautify",
                "category": "menubar",
                "icon": {
                    "light": "images/format_light.svg",
                    "dark": "images/format.svg"
                }
            },
            {
                "command": "extension.filelist",
                "title": "Opened Files",
                "category": "menubar",
                "icon": {
                    "light": "images/list_light.svg",
                    "dark": "images/list.svg"
                }
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "when": "!isInDiffEditor && !markdownPreviewFocus",
                    "command": "extension.save",
                    "group": "navigation@1"
                },
                {
                    "when": "!isInDiffEditor && !markdownPreviewFocus",
                    "command": "extension.beautify",
                    "group": "navigation@2"
                },
                {
                    "when": "!isInDiffEditor && !markdownPreviewFocus",
                    "command": "extension.filelist",
                    "group": "navigation@3"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}